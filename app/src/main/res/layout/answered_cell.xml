<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/questionAreaAnswered"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/selector2"
    android:elevation="5dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/questionTitleAnswered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="16sp" />

    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <TextView
        android:id="@+id/questionAuthorAnswered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:alpha="0.5"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:textSize="13sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <Button
        android:id="@+id/buttonReAnswerAnswered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/selector"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Разархивировать"
        android:textSize="16sp"/>

</LinearLayout>





